<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/acsll"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/ac1rl"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_weight="1">

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/seekArc1"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="100dp"
            seekarc:arcColor="@color/colorRed"
            seekarc:clockwise="true"
            seekarc:max="100"
            seekarc:progressColor="@color/colorPrimary"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/seekbarthumbcircle"
            seekarc:touchInside="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/seekArc1"
                android:layout_alignLeft="@id/seekArc1"
                android:layout_alignRight="@id/seekArc1"
                android:layout_alignTop="@id/seekArc1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ac1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="80dp" />

                <TextView
                    android:id="@+id/textDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:text="o"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textCelcius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="80dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/roomtemp_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="25"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/roomtemp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/roomtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="25"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="60pt"
                android:layout_height="40pt"
                android:layout_marginTop="20pt"
                android:text="New ToggleButton"
                android:textOff="@string/off"
                android:textOn="@string/on"
                android:textColor="@color/colorWhite"
                android:textSize="15pt" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Fan"
                android:textColor="@color/colorWhite"
                android:textSize="40dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <RadioButton
                    android:id="@+id/radioButton2"
                    style="@style/radionbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  Low"
                    android:textColorLink="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:textSize="40dp" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    style="@style/radionbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  High"
                    android:textColorLink="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:textSize="40dp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

