<?xml version="1.0" encoding="utf-8"?>
<com.verboze.villacontrol.DimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:id="@+id/overall"
    android:background="@color/colorBackground"
    android:keepScreenOn="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/sidebar"/>
            <include layout="@layout/content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overlayer">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/seekbarthumb"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

</com.verboze.villacontrol.DimmerLayout>
